{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kill: All Servers",
      "type": "shell",
      "command": "fuser -k 7000/tcp 7001/tcp 7002/tcp 7003/tcp 7004/tcp 7009/tcp 2>/dev/null; pkill -f 'deno.*main.ts' 2>/dev/null; pkill -f 'deno.*--inspect' 2>/dev/null; pkill -f 'metro' 2>/dev/null; exit 0",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Expo Web Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/packages/app"
      },
      "dependsOn": [
        "Start Storage Server"
      ],
      "dependsOrder": "sequence",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Metro Bundler",
          "endsPattern": "Logs for your project will appear below"
        }
      }
    },
    {
      "label": "Start Storage Server",
      "type": "shell",
      "command": "deno run --allow-all ${workspaceFolder}/tools/start-localstorage.ts",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*tsx.*localStorageServer|Starting",
          "endsPattern": "Local Storage Server running|running on|Server running|listening"
        }
      }
    },
    {
      "label": "Start Dev Environment",
      "type": "shell",
      "command": "deno run --allow-all ${workspaceFolder}/tools/startDev.ts",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting",
          "endsPattern": "Bundled|Metro|listening"
        }
      }
    },
    {
      "label": "Export Sandboxdata",
      "type": "shell",
      "command": "deno run -A ${workspaceFolder}/packages/test/src/sandbox/export.ts",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting",
          "endsPattern": "Bundled|Metro|listening"
        }
      }
    },
    {
      "label": "Start Web Server",
      "type": "shell",
      "command": "deno run dev",
      "dependsOn": [
        "Kill: All Servers"
      ],
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}/packages/web"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE|starting",
          "endsPattern": "ready in|Local:|http://localhost"
        }
      }
    },
    {
      "label": "TypeScript Check: App",
      "type": "shell",
      "command": "npx tsc --noEmit",
      "options": {
        "cwd": "${workspaceFolder}/packages/app"
      },
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "TypeScript Check: Core",
      "type": "shell",
      "command": "deno check",
      "options": {
        "cwd": "${workspaceFolder}/packages/core"
      },
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "TypeScript Check: All",
      "dependsOn": [
        "TypeScript Check: App",
        "TypeScript Check: Core"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "web:deploy",
      "type": "shell",
      "command": "cd ${workspaceFolder}/packages/web && bash deploy.bash",
      "group": "build",
    },
  ]
}