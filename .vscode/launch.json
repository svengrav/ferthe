    {
      "name": "ðŸ”µ Run API",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/core/index.ts",
      "cwd": "${workspaceFolder}/packages/core",
      "preLaunchTask": "Build Core Watch",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--watch",
        "--inspect=127.0.0.1:9229",
        "-A",
       "api/index.ts"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "sourceMaps": true,
      "restart": true,
      "envFile": "${workspaceFolder}/.env",
      "outputCapture": "std"
    },
    {
      "name": "ðŸŸ¢ Run App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}/packages/app",
      "preLaunchTask": "Start Expo Web Server",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*"
      }
    },
  ],
  "compounds": [
    {
      "name": "âšª Run Full",
      "configurations": [
        "ðŸŸ¢ Run App",
        "ðŸ”µ Run API"
      ],
      "stopAll": true
    }
  ]
