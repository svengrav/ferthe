{
  "version": "0.2.0",
  "configurations": [  
    {
      "name": "ðŸŸ¦ Run API",
      "request": "launch",
      "type": "node",
      "preLaunchTask": "Kill: All Servers",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--watch",
        "--inspect",
        "main.ts"
      ],
      "attachSimplePort": 7009,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸŸ¥ Run App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:7004",
      "webRoot": "${workspaceFolder}/packages/app",
      "preLaunchTask": "Start Expo Web Server",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*"
      }
    },
    {
      "name": "ðŸŸ¨ Run Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:7002",
      "webRoot": "${workspaceFolder}/packages/web/app",
      "preLaunchTask": "Start Web Server"
    }
  ],
  "compounds": [
    {
      "name": "ðŸŸ§ Run Web",
      "configurations": [
        "ðŸŸ¦ Run API",
        "ðŸŸ¨ Run Web"
      ],
      "stopAll": true,
      "preLaunchTask": "Kill: All Servers"
    },
    {
      "name": "ðŸŸ© Run App",
      "configurations": [
        "ðŸŸ¥ Run App",
        "ðŸŸ¦ Run API"
      ],
      "stopAll": true,
      "preLaunchTask": "Kill: All Servers"
    }
  ]
}