{
  "version": "0.2.0",
  "configurations": [  
    {
      "name": "游릱 Run API",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--watch",
        "--inspect=127.0.0.1:7009",
        "main.ts"
      ],
      "attachSimplePort": 7009,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "游린 Run App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:7004",
      "webRoot": "${workspaceFolder}/packages/app",
      "preLaunchTask": "app:start",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*"
      }
    },
    {
      "name": "游릳 Run Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:7002",
      "webRoot": "${workspaceFolder}/packages/web/app",
    }
  ],
  "compounds": [
    {
      "name": "游릴 Run App",
      "configurations": [
        "游릱 Run API",
        "游린 Run App",
      ],
      "stopAll": true,
      "preLaunchTask": "kill:all"
    },
    {
      "name": "游릴 Run Web",
      "configurations": [
        "游릱 Run API",
        "游릳 Run Web",
      ],
      "stopAll": true,
      // "preLaunchTask": "kill:all"
    }
  ]
}