{
  "version": "0.2.0",
  "configurations": [  
    {
      "name": "游릱 Run API",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--watch",
        "--inspect",
        "main.ts"
      ],
      "attachSimplePort": 9229,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "游린 Run App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}/packages/app",
      "preLaunchTask": "Start Expo Web Server",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*"
      }
    },
    {
      "name": "游릳 Run Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:15173",
      "webRoot": "${workspaceFolder}/packages/web/app",
      "preLaunchTask": "Start Web Server"
    }
  ],
  "compounds": [
    {
      "name": "游릴 Run Web",
      "configurations": [
        "游릱 Run API",
        "游릳 Run Web"
      ],
      "stopAll": true
    },
    {
      "name": "游릴 Run App",
      "configurations": [
        "游린 Run App",
        "游릱 Run API"
      ],
      "stopAll": true
    }
  ]
}