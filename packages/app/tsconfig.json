{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": false,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "outDir": "dist",
    "noEmit": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@app/shared/*": [
        "./src/shared/*"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "index.ts",
    "app.config.ts"
  ],
  "exclude": [
    ".old",
    "dist",
    "node_modules",
    "**/node_modules/*"
  ],
  "extends": "expo/tsconfig.base"
}
