{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2023",
    "strict": false,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "outDir": "dist",
    "noEmit": false,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@app/shared/*": ["./src/shared/*"],
      "@shared/*": ["../ferthe-shared/src/*"]
    }
  },
  "include": ["src/**/*", "index.ts", "app.config.ts"],
  "exclude": [".old", "dist", "node_modules", "**/node_modules/*"],
}
// Ferthe App TypeScript Configuration