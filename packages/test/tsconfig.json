{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@test/*": ["./src/*"],
      "@core/*": ["../core/src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".old",
    "dist",
    "node_modules",
    "**/node_modules/*"
  ]
}