{
  "name": "ferthe-workspace",
  "description": "Monorepo for the ferthe project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "ferthe-app",
    "ferthe-core",
    "ferthe-shared",
    "ferthe-test",
    "ferthe-api"
  ],
  "scripts": {
    "start": "tsx ./.tools/startup.ts -c -b -s",
    "build": "tsx ./.tools/startup.ts -c -b",
    "clean": "tsx ./.tools/startup.ts -c",
    "test": "cd ferthe-test && npm test",
    "dev:api": "cd ferthe-api && npm run dev",
    "dev:app": "cd ferthe-app && npm run web",
    "export:data": "cd ferthe-test && tsx ./src/sandbox/export.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "esbuild": "^0.19.0",
    "tsx": "^4.19.4"
  }
}